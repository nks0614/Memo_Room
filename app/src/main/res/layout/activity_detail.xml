<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">

    <TextView
        android:id="@+id/watch_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/edit_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/watch_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@+id/watch_title"
        app:layout_constraintBottom_toTopOf="@id/watch_content"
        android:visibility="visible"/>

    <EditText
        android:id="@+id/edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="@drawable/border"
        app:layout_constraintTop_toBottomOf="@+id/watch_title"
        app:layout_constraintBottom_toTopOf="@id/watch_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/watch_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONTENT"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/watch_edit_title"
        app:layout_constraintBottom_toTopOf="@id/watch_edit_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/watch_edit_content"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="@drawable/border"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@+id/text_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:id="@+id/edit_content"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_margin="20dp"
        android:padding="5dp"
        android:background="@drawable/border"
        android:gravity="top"
        app:layout_constraintTop_toBottomOf="@+id/text_content"
        android:visibility="gone"/>

    <Button
        android:id="@+id/fix_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="FIX"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/watch_edit_content"/>


    <Button
        android:id="@+id/del_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:text="DELETE"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>